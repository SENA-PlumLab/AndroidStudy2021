<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shapes" />

    <LinearLayout
        android:id="@+id/ButtonRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ButtonLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line" />
        <Button
            android:id="@+id/ButtonOval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oval" />
        <Button
            android:id="@+id/ButtonRect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rectangle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ButtonPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Path" />
        <Button
            android:id="@+id/ButtonArc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arc" />
        <Button
            android:id="@+id/ButtonRoundRect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rnd Rect" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ButtonRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ButtonRoundRect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rnd Rect2" />
        <Button
            android:id="@+id/ButtonPath2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Path2" />
        <Button
            android:id="@+id/ButtonPath3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Path3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="500px"
            android:minWidth="90px"
            android:layout_margin="115px"
            android:id="@+id/ImageViewForShape" />

    </LinearLayout>
</LinearLayout>